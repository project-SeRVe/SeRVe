# src/main/resources/application.properties
# 1. MariaDB 연결 설정 (도커와 연결)
spring.datasource.url=jdbc:mariadb://localhost:3306/serve_db?allowPublicKeyRetrieval=true&useSSL=false&characterEncoding=UTF-8&serverTimezone=Asia/Seoul
spring.datasource.username=serve_user
spring.datasource.password=serve_pass
spring.datasource.driver-class-name=org.mariadb.jdbc.Driver

# 2. JPA & Hibernate 설정 (데이터 보존)
# update: 서버가 켜질 때, 테이블이 없으면 만들고 있으면 유지함 (데이터 안 날아감)
spring.jpa.hibernate.ddl-auto=update

# 콘솔에 SQL 로그 찍기 (디버깅용)
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# MariaDB 방언 설정 (최적화)
spring.jpa.database-platform=org.hibernate.dialect.MariaDBDialect

# 3. 인코딩 설정 (기존 내용 유지)
spring.banner.charset=UTF-8
logging.charset.console=UTF-8

# 서버 네트워크 설정 (모든 IP에서 접속 허용)
server.port=8080
server.address=0.0.0.0
